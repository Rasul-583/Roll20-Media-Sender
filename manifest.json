{
    "manifest_version": 3,
    "name": "Roll20 Media Sender",
    "version": "0.2",
  
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
      "48": "/assets/icons/48.png",
      "128": "/assets/icons/128.png"
      }
    },
    
    "description": "A plain text description",
    "icons": {
      "48": "/assets/icons/48.png",
      "128": "/assets/icons/128.png"
    },

    "permissions": [
      "contextMenus",
      "notifications",
      "storage",
      "clipboardWrite"
    ],

    "background": {
      "service_worker": "background.js"
    }
}